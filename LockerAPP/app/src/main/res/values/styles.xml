<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_tip">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_tip_1">
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">@color/theme_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_tip_center">
        <item name="android:background">@drawable/xh_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="edit_tip">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="text_tip_tanhao">
        <item name="android:background">@drawable/tanhao_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>
</resources>
